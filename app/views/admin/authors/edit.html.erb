<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2><%= t ".edit" %></h2>
    <%= form_for [:admin, @author] do |f| %>
      <%= f.label :name, t(".edit_name")%>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.submit t(".save"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
