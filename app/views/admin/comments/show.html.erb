<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h1><%= t ".view_comment" %></h1>
    <h4><%= t ".name_user" %></h4>
    <h2><%= @comments.name %></h2>
    <h4><%= t ".content" %></h4>
    <p><%= @comments.content %></p>
    <h4><%= t ".review_content" %></h4>
    <p><%= @comments.review.content %></p>
    <%= link_to t(".delete"), admin_comment_path(@comments), method: :delete,
            class: "btn btn-danger", data: {confirm: t(".you_sure")} %>
    <%= link_to t(".back"), admin_comments_path, class: "btn btn-info"  %>
  </div>
</div>
