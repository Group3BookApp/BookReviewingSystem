<% @author.each do |author| %>
  <table  class="table table-condensed">
    <tbody>
      <tr>
        <td class="col-md-6"><%= author.name %></td>
        <td class="col-md-1">
          <%= link_to t(".delete"), admin_author_path(author), method: :delete,
            class: "btn btn-danger", data: {confirm: t(".you_sure")} %>
        </td>
        <td>
          <%= link_to t(".edit"), edit_admin_author_path(author),
            class: "btn btn-primary" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
