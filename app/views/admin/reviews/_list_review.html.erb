<% @reviews.each do |review| %>
  <table id="table-book" class="table table-condensed">
    <tbody>
      <tr>
        <td class="col-md-2"><%= review.user_name %></td>
        <td class="col-md-5"><%= review.content %></td>
        <td class="col-md-1"><%= review.num_rate %></td>
        <td class="col-md-2"><%= review.book_title %></td>
        <td class="col-md-1">
          <%= link_to t(".delete"), admin_review_path(review), method: :delete,
            class: "btn btn-danger", data: {confirm: t(".you_sure")} %>
        </td>
        <td class="col-md-1">
          <%= link_to t(".view"), "#{}",data: {toggle: "modal",
            target: "#review-#{review.id}"}, class: "btn btn-info" %>
        </td>
      </tr>
    </tbody>
  </table>
  <div id="review-<%=review.id%>" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title"><%= t ".view_review" %></h4>
        </div>
        <div class="modal-body">
          <h4><%= t ".name_user" %></h4>
          <h2><%= review.user_name %></h2>
          <h4><%= t ".num_rate" %> <%= review.num_rate %></h4>
          <h4><%= t ".name_book" %> <%= review.book_title %></h4>
          <h4><%= t ".content" %></h4>
          <p><%= review.content %></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t ".close" %></button>
        </div>
      </div>
    </div>
  </div>
<% end %>
