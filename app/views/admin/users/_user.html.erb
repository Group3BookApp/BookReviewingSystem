<% @user.each do |user| %>
  <table class="table table-condensed">
    <tbody>
      <tr>
        <td rowspan="3" class="col-md-2">
          <%= image_tag user.avatar.url %>
        </td>
        <td class="col-md-6"><%= link_to user.name, user %></td>
        <td rowspan="3">
          <% if !user.admin? && !current_user?(user) %>
          <%= link_to t(".delete"), admin_user_path(user), method: :delete,
            class: "btn btn-danger", data: {confirm: t(".you_sure")} %>
          <% end %>
        </td>
      </tr>
      <tr><td><%= link_to user.email, user %></td></tr>
      <tr><td><%= link_to user.address, user %></td></tr>
    </tbody>
  </table>
<% end %>
