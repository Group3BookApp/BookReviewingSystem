<% @comments.each do |comment| %>
  <table id="table-book" class="table table-condensed">
    <tbody>
      <tr>
        <td class="col-md-2"><%= comment.name %></td>
        <td class="col-md-4"><%= comment.content %></td>
        <td class="col-md-4"><%= comment.review.content %></td>
        <td class="col-md-1">
          <%= link_to t(".delete"), admin_comment_path(comment), method: :delete,
            class: "btn btn-danger", data: {confirm: t(".you_sure")} %>
        </td>
        <td class="col-md-1">
          <%= link_to t(".view"), admin_comment_path(comment), class: "btn btn-info" %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
